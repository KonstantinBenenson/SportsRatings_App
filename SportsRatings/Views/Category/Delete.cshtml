@model SportsRatings.Models.SportCategoriesModel

@{
    ViewData["Title"] = "Delete";
}
<br />
<h2 class="text-danger pb-10">Are you sure you want to delete this?</h2>
<br />
<div>
    <table class="table border border-info">
        <thead>
            <tr>
                <th>CATEGORY NAME</th>
                <th class="text-center">SPORTS IN THE CATEGORY</th>
            </tr>                     
        </thead>       
        <tbody>
            <tr>
                <td>@Model.Name</td>
                <td class="text-center">-</td> <!--Место для видов спорта в данной категории-->
            </tr>
        </tbody>

    </table>
    
    <form method="post" asp-action="DeletePost">
        <input asp-for="Id" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger w-25 float-start" /> 
        <a class="btn btn-warning text-white w-25 float-end" asp-action="GetAllCategories">Back to List</a>
    </form>
</div>
