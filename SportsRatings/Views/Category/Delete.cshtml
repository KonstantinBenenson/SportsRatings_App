@model SportsRatings.Models.CategoriesModel

@{
    ViewData["Title"] = "Delete";
}
<br />
<h3 class="text-danger pb-10">Are you sure you want to delete this?</h3>
<hr />
<br />
<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th>CATEGORY NAME</th>
                <th class="text-center">SPORTS IN THE CATEGORY</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="bg-info"><b>@Model.Name</b></td>
                @if (Model.Sports?.Count() > 0)
                {
                    foreach (var item in Model.Sports)
                    {
                        <td class="text-center">
                            @item.Name
                        </td> <!--Место для видов спорта в данной категории-->
                    }
                }
                else
                {
                    <td>NO DATA TO DISPLAY</td>
                }
            </tr>
        </tbody>

    </table>

    <form method="post" asp-action="DeletePost">
        <input asp-for="Id" type="hidden" />
        <input type="submit" value="Delete" class="btn btn-danger w-25 float-start col-2" />
        <a class="btn btn-warning text-white w-25 float-end-block col-2" asp-action="GetAllCategories">Back to List</a>
    </form>
</div>
