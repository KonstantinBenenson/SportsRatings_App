@model IEnumerable<SportsModel>

@{
    ViewData["Title"] = "All Sports";
}

<div class="container">
    <h1>ALL SPORTS YOU ADDED</h1>
    <br />
    <hr />
    <br />
</div>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>NAME</th>
            <th>DESCRIPTION</th>
            <th>ALSO IN CATEGORIES</th>
        </tr>
    </thead>
    @if (Model.Count() == 0)
    {
        <tbody>
            <tr>
                <td>NO DATA</td>
                <td>NO DATA</td>
                <td>NO DATA</td>
            </tr>
        </tbody>
    }
    else if (Model.Count() > 0)
    {
        @foreach (var sport in Model)
        {
            <tbody>
                <tr>
                    <td>@sport.Name</td>
                    <td>@sport.</td>
                    <td></td>
                </tr>
            </tbody>
        }
    }
</table>

<div class="container-12">
    <div class="row">
        <div class="col-md-4">
            <a class="btn btn-info text-white col-2" asp-controller="Category" asp-action="GetAllCategories">OTHER CATEGORIES</a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-secondary offset-3 col-2" asp-controller="Home" asp-action="Index">Back to the Main Page</a>
        </div>
        <div class="col-md-4">
            <a class="btn btn-success float-end col-2" asp-action="Create">CREATE NEW</a>
        </div>
    </div>
</div>
