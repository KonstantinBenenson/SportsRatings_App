<div class="container-lg">
    <div class="row ms-4">
        <div class="col-md-6">
            <form method="post" asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group my-2">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <label asp-for="PersonalRate" class="control-label"></label>
                    <input asp-for="PersonalRate" class="form-control" />
                    <span asp-validation-for="PersonalRate" class="text-danger"></span>
                </div>
                <div class="form-group my-2">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                @*<div class="form-group my-2">
                    <label asp-for="Category" class="control-label">Add to Category</label>
                    <input asp-for="Category" class="form-control" />
                    <span asp-validation-for="Category" class="text-danger"></span>  <!--Добавить выбор нужной категории (множественный выбор?) из выпадающей строки-->
                    </div>*@
                <br />
                <div class="form-group">
                    <input type="submit" value="CREATE" class="btn btn-primary col-2" />
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary float-end col-2">Back to the Main Page</a>
                </div>
            </form>
        </div>
        <div class="col-md-6 my-5">
            <p class="h6">1) TYPE A NAME OF THE SPORT</p>
            <br />
            <p class="h6">2) DEFINE YOUR PERSONAL RATING FOR THIS SPORT <br /> (FROM 1 TO 5, WHERE 1 IS THE LEAST FAVOURITE AND 5 IS THE FAVOURABLE SPORT)</p>
            <br />
            <p class="h6">3) DESCRIPTION FOR THIS SPORT (OPTIONAL, YOU WILL BE ABLE TO ADD IT LATER)</p>
        </div>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
